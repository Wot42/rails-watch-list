<div class="container bg-light cards">
  <!--<ol> -->
    <% @lists.each do |list| %>
      <% if list.photo.key %>
        <%= link_to list_path(list[:id]) do %>

          <!-- <li class="link-secondary"><%= link_to list.name, list_path(list[:id]), class: "link-secondary"  %></li> -->
          <div class="card-category"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <p class="link-white" ><%= list.name %></p>
          </div>
        <% end %>

      <% end %>

    <%end%>
  <!--</ol> -->
</div>
